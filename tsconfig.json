{
	"compilerOptions": {
		"allowSyntheticDefaultImports": true,
		"outDir": "dist",
		"module": "ESNext",
		"target": "ESNext",
		"sourceMap": true,
		"allowJs": false,
		"jsx": "react",
		"moduleResolution": "node",
		"declaration": true,
		"declarationMap": true,
		"noImplicitReturns": true,
		"noImplicitThis": true,
		"diagnostics": true,
		"esModuleInterop": true,
		"composite": true,
		"noImplicitAny": true,
		"strictNullChecks": true,
		"suppressImplicitAnyIndexErrors": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true
	},
	"include": ["src"],
	"exclude": ["node_modules", "dist"]
}
