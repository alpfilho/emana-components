{
	"compilerOptions": {
		"module": "CommonJS",
		"target": "ES6",
		"sourceMap": true,
		"strict": true,
		"allowJs": true,
		"outDir": "dist",
		"rootDir": "src",
		"jsx": "react",
		"moduleResolution": "Node",
		"declaration": true,
		"declarationMap": true,
		"skipLibCheck": true,
		"esModuleInterop": true,
		"resolveJsonModule": true,
		"noEmit": true,
		"pretty": true,
		"baseUrl": "./",
		"paths": {
			"@components/*": ["src/components/*"],
			"@contexts/*": ["src/contexts/*"],
			"@hooks/*": ["src/hooks/*"],
			"@utils/*": ["src/utils/*"]
		},
		"plugins": [{ "transform": "@zerollup/ts-transform-paths" }]
	},
	"include": ["src"],
	"exclude": ["./node_modules/*", "./dist/"]
}
