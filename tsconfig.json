{
	"compilerOptions": {
		"allowSyntheticDefaultImports": true,
		"outDir": "dist",
		"module": "ESNext",
		"target": "ESNext",
		"sourceMap": true,
		"allowJs": false,
		"rootDir": "src",
		"jsx": "react",
		"moduleResolution": "classic",
		"declaration": true,
		"declarationMap": true,
		"noImplicitReturns": true,
		"noImplicitThis": true,
		"diagnostics": true,
		"esModuleInterop": true,
		"composite": true,
		"noImplicitAny": true,
		"strictNullChecks": true,
		"suppressImplicitAnyIndexErrors": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"baseUrl": "./",
		"paths": {
			"components/*": ["src/components/*"],
			"utils/*": ["src/utils/*"],
			"hooks/*": ["src/hooks/*"],
			"contexts/*": ["src/contexts/*"]
		}
	}
}
